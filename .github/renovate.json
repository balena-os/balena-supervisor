{
  "extends": ["github>balena-io/renovate-config"],
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "enabled": true
    },
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor"],
      "matchCurrentVersion": "/^v?0/",
      "automerge": false
    }
  ]
}
